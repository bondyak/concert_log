<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="jumbotron">
      <h2>Artists</h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/artists/new" class="btn btn-default btn-block">
      <i class="fa fa-plus">
      </i>
    </a>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th></th>
      </tr>

      <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><img src="<%= artist.image %>" class="crop"></td>
        <td>
          <a href="/delete_artist/<%= artist.id %>" class="btn btn-danger pull-right" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
          <a href="/artists/<%= artist.id %>/edit" class="btn btn-warning pull-right">
            <i class="fa fa-edit"></i>
          </a>
          <a href="/artists/<%= artist.id %>" class="btn btn-primary pull-right">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @artists, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
