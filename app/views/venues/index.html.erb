<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="jumbotron">
      <h2>Venues</h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/venues/new" class="btn btn-default btn-block">
      <i class="fa fa-plus">
      </i>
    </a>
    <hr>
  </div>
</div>


<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th></th>
      </tr>

      <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.location %></td>
        <td>
          <a href="/delete_venue/<%= venue.id %>" class="btn btn-danger pull-right" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
          <a href="/venues/<%= venue.id %>/edit" class="btn btn-warning pull-right">
            <i class="fa fa-edit"></i>
          </a>
          <a href="/venues/<%= venue.id %>" class="btn btn-primary pull-right">
            <i class="fa fa-search-plus"></i>
          </a>        
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @venues, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
